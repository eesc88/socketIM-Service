<% include layout.ejs %>
<div class="container">
    <div class="well well-lg">
        1. This system use cookie records the user name, don't worry about other users to see the current page<br/>
        2. Submit the form using the enter key<br/>
        3. I wish you a happy to use
    </div>

    <form role="form" action="/user/edit" method="post" accept-charset="utf-8">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" value="<%= user.get('username') %>" name="username">
            <input name="id" value="<%= user.id %>" type="hidden">
        </div>
        <div class="form-group">
            <label for="pwd">Password</label>
            <input type="password" class="form-control" id="pwd" value="<%= user.get('password') %>" name="pwd">
        </div>
        <div class="form-group">
            <label for="re_pwd">Password</label>
            <input type="password" class="form-control" id="re_pwd" value="<%= user.get('password') %>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" value="<%= user.get('email') %>" name="email">
        </div>

        <div class="form-group">
            <label for="user_type">User type</label>
            <input type="text" class="form-control" id="user_type" value="<%= user.get('user_type') %>"
                   name="user_type">
        </div>

        <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

